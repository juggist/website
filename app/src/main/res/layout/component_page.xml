<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="140mm"
    android:layout_marginBottom="80mm"
    android:paddingStart="180mm"
    android:paddingEnd="180mm"
   >

    <TextView
        android:id="@+id/btn_pageFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一页"
        android:textColor="@android:color/darker_gray"
        android:textSize="46mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_pageFoward"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_pageFoward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上一页"
        android:textColor="@android:color/darker_gray"
        android:textSize="46mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_pageFirst"
        app:layout_constraintRight_toLeftOf="@+id/btn_pageNext"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_pageNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一页"
        android:textColor="@android:color/darker_gray"
        android:textSize="46mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_pageFoward"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>