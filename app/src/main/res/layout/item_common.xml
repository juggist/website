<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingRight="80mm"
    android:paddingLeft="80mm"
    android:layout_height="389mm">

    <com.makeramen.roundedimageview.RoundedImageView

        android:id="@+id/img_head"
        android:layout_width="256mm"
        android:layout_height="256mm"
        android:scaleType="fitXY"
        android:src="@mipmap/app_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="@android:color/darker_gray"
        app:riv_border_width="2mm"
        app:riv_corner_radius="128mm" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jugg"
        android:layout_marginStart="30mm"
        android:textColor="@android:color/black"
        android:textSize="55mm"
        app:layout_constraintLeft_toRightOf="@+id/img_head"
        app:layout_constraintTop_toTopOf="@+id/img_head" />

    <TextView
        android:id="@+id/tv_sex"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34mm"
        android:text="性别:男"
        android:textSize="44mm"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_age"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄:30"
        android:textSize="44mm"
        android:layout_marginStart="64mm"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_sex" />

    <TextView
        android:id="@+id/tv_height"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身高:174cm"
        android:textSize="44mm"
        android:layout_marginStart="64mm"
        app:layout_constraintLeft_toRightOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_sex" />

    <TextView
        android:id="@+id/tv_weight"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28mm"
        android:text="体重:62kg"
        android:textSize="44mm"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_sex" />

    <TextView
        android:layout_marginStart="14mm"
        android:textColor="@android:color/black"
        android:id="@+id/tv_shoeSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鞋码:42码"
        android:textSize="44mm"
        app:layout_constraintLeft_toRightOf="@+id/tv_weight"
        app:layout_constraintTop_toTopOf="@+id/tv_weight" />
</androidx.constraintlayout.widget.ConstraintLayout>