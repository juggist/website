<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145mm"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ibtn_toBaby"
            android:layout_width="280mm"
            android:layout_height="86mm"
            android:layout_marginStart="158mm"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/et_babyName"
            android:layout_width="436mm"
            android:layout_height="86mm"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="40mm"
            android:background="@android:color/white"
            android:drawableRight="@mipmap/ic_launcher"
            android:hint="宝贝名称"
            android:paddingLeft="4mm"
            android:textSize="36mm" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="590mm"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>